
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow public read access to images
    match /images/{imageId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;
    }
    
    // Allow users to manage their own vote data
    match /users/{userId}/user_votes/{contestId} {
       allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow users to create and read contests
    match /contests/{contestId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && request.resource.data.creatorUid == request.auth.uid;
    }
  }
}

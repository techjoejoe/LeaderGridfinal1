
{
  "rules": {
    "live-polls": {
      ".read": "true",
      ".write": false,
      "$sessionId": {
         "polls": {
           "$pollId": {
              "options" : {
                "$optionIndex": {
                  "votes": {
                    ".write": "true" 
                  }
                }
              }
           }
         }
       }
    }
  }
}
